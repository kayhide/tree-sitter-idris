#!/usr/bin/env bash

set -eu

BASE_DIR="$(cd "$(dirname "$0")/.." > /dev/null 2>&1 && pwd)"
cd "$BASE_DIR"

die() {
  >&2 echo "$1"
  exit 1
}

generate() {
  echo generating...
  tree-sitter generate && echo generate ok
}

test() {
  echo testing...
  tree-sitter test && echo test ok
}

command="${1:-}"
[[ -z "$command" ]] && die "No command"
shift

case "$command" in
  dev)
    set +e
    while true; do
      find grammar.js | entr -cdr bin/start generate &
      find src test | entr -cdr bin/start test &
      wait
      (( $? == 0 || $? > 128 )) && exit 0
    done
    ;;
  *)
    if type "$command" > /dev/null; then
      $command "$@"
    else
      die "Unknown command: $command"
    fi
    ;;
esac

